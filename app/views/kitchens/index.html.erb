<p id="notice"><%= notice %></p>

<h1>Listing Kitchens</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Location</th>
      <th>Description</th>
      <th>Price</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitchens.each do |kitchen| %>
      <tr>
        <td><%= kitchen.host %></td>
        <td><%= kitchen.location %></td>
        <td><%= kitchen.description %></td>
        <td><%= kitchen.price %></td>
        <td><%= kitchen.availability %></td>
        <td><%= link_to 'Show', kitchen %></td>
        <td><%= link_to 'Edit', edit_kitchen_path(kitchen) %></td>
        <td><%= link_to 'Destroy', kitchen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

